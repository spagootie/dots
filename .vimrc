" show line number
set number
" show relative line number
set relativenumber 
" width = 4 before text editing
set numberwidth=4
" no pesky swap files
set nobackup
set nowritebackup
set noswapfile

" don't wrap text
set nowrap

syntax on

set backspace=2

" tab = 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

set autoindent
" delete four spaces with backspace if it's a tab
set softtabstop=4 
